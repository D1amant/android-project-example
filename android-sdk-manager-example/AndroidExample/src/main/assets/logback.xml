<?xml version="1.0" encoding="utf-8"?>

<configuration>
    <!-- Create a logcat appender -->
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>AndroidExample%nopex</pattern>
        </tagEncoder>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %logger - %msg</pattern>
        </encoder>
    </appender>

    <!-- Write DEBUG messages from project classes to the logcat appender -->
    <!-- <logger name="com.noveogroup.android_application" level="DEBUG"> -->
    <!--    <appender-ref ref="logcat" />                                 -->
    <!-- </logger>                                                        -->

    <!-- Write ERROR (and higher-level) messages to the logcat appender -->
    <!-- <root level="ERROR">                                           -->
    <!--    <appender-ref ref="logcat" />                               -->
    <!-- </root>                                                        -->

    <!-- Write DEBUG (and higher-level) messages to the logcat appender -->
    <root level="DEBUG">
        <appender-ref ref="logcat" />
    </root>
</configuration>
